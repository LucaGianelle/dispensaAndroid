<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.widget.Button
        android:id="@+id/buttonDispensa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/two_state_button"
        android:text="@string/buttonDispensa"
        app:layout_constraintBottom_toTopOf="@+id/buttonMappa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeProfile"
        app:layout_constraintVertical_bias="0.0" />

    <android.widget.Button
        android:id="@+id/buttonMappa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/two_state_button"
        android:onClick="openMaps"
        android:text="@string/buttonMappa"
        app:layout_constraintBottom_toTopOf="@+id/buttonDatiPersonali"
        app:layout_constraintEnd_toEndOf="@+id/buttonDispensa"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/buttonDispensa"
        app:layout_constraintTop_toBottomOf="@+id/buttonDispensa"
        app:layout_constraintVertical_bias="0.0" />

    <android.widget.Button
        android:id="@+id/buttonDatiPersonali"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/two_state_button"
        android:text="@string/buttonDatiPersonali"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonMappa"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/buttonMappa"
        app:layout_constraintTop_toBottomOf="@+id/buttonMappa"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/homeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/homeProfile"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonDispensa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>